<div class="wrapper">

<div class="navbar navbar-expand navbar-light d-flex p-0 navbar-lewagon justify-content-center">
  <%= link_to "Home", root_path, class:"nav-link" %>
  <%= link_to 'Back to my future events', future_events_path, class:"nav-link" %>
  <% if current_user %>
    <%= link_to "Edit the event", edit_future_event_path(@future_event), class:"nav-link" %>
    <%= link_to "delete the event", future_event_path(@future_event.id), data: { confirm: "Are you sure?" }, method: :delete, class:"nav-link" %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"nav-link" %>
  <% end %>
</div>

<!-- content -->
<div class="my-pipeline">
    <div class="my-pipeline-row">
        <div class="my-pipeline-card">
            <div class="my-pipeline-title">
                <h5>
                    <%= @future_event.title %>
                </h5>
            </div>
            <p class="my-pipeline-text">
            <%= @future_event.description %>
            <%= @future_event.date_start.strftime("%-d %B %Y") %>
            <%= @future_event.date_end.strftime("%-d %B %Y") %>
            <%= @future_event.location %>
            </p>
        </div>
    </div>
</div>
