
  <div id="navbar">
    <% if current_user %>
    <%= link_to 'Back to main page', root_path %>
    <%= link_to "My past events", past_events_path %>
    <%= link_to "Edit the event", edit_past_event_path(@past_event) %>
    <%= link_to "delete the event", past_event_path(@past_event.id), data: { confirm: "Are you sure?" }, method: :delete if current_user %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% end %>
  </div>

<div class="past-event-container show">
    <div class="row">
        
        <div class="past-event-info show">
            <h5>
                <%= @past_event.title %>
            </h5>
            <p>
                <%= @past_event.description %>
            </p>
            <p> <strong>
                    <%= @past_event.location %></strong> from
                <%= @past_event.date_start %> to
                <%= @past_event.date_end %>
            </p>
            <% if !@past_event.photos.empty? %>
            </p>
            <% end %>
        </div>

        <% @past_event.photos.each do |photo| %>
        <div class="column">
            <%= cl_image_tag photo.key, style:"width:100%" %>
        </div>
        <% end %>
    </div>
</div>